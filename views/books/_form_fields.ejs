<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>
<div>
    <label>Author</label>
    <select name="author">
        <%authors.forEach(author => {%>
            <!-- Here, author is a placeholder representing the current element being processed 
            in the iteration, and you can access its properties or perform any other desired
            operations within the code block. -->
            <% if (author.id === book.author) { %>
                <option selected label = "<%= author.name %>" value="<%= author.id %>">
            <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>"></option>
                <% } %>
        <% }) %>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishdate"
     value="<%= book.publishDate == null ? ' ' : book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page count</label>
    <input type="number" min="1" name="pagecount"
     value="<%= book.pageCount  %>">
</div>
<div style="height: 300px; width: 150px;">
    <label>Cover</label>
    <input  type="file"  name="cover" class="filepond">
</div>
<br>
<div style="margin-top: 3px;">
    <label>Desription</label>
    <textarea name="description" id="" cols="30" rows="5">
        <%= book.description  %>
    </textarea>
</div>
